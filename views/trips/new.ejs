<!-- 
- The page where users can create a new trip. This page is only accessible to logged in users.
- The page displays a form where the user can enter the trip name, the trip destination, the trip start date, and the trip end date.
- The user can click on the "Create trip" button to create a new trip.
-->

<%- include('../partials/header') %>

<div class="position-relative overflow-hidden p-3 p-md-5 m-md-3 text-center bg-light">
  <div class="col-md-8 col-lg-6 mx-auto my-5">
    <h2 class="display-5 font-weight-normal">Plan a new Trip</h2>
    <form id="new-trip" action="/trips" method="POST" autocomplete="off">
      <div class="form-group row p-2">
        <div class="col-12 col-md-12 col-lg-6 my-2 my-md-2 my-lg-0">
          <input type="text" required class="form-control" id="tripName" name="name" placeholder="Name your trip">
        </div>
        <div class="col-12 col-md-12 col-lg-6 mt-2 mt-md-2 mt-lg-0">
          <input type="text" required class="form-control" id="tripDestination" name="destination" placeholder="Where are you going?">
        </div>
      </div>
      <div class="form-group row p-2">
        <div class="col-6 col-md-6 col-lg-6">
          <input type="date" required class="form-control" name="startDate">
        </div>
        <div class="col-6 col-md-6 col-lg-6">
          <input type="date" required class="form-control" name="endDate">
        </div>
      </div>
      <div class="form-group row p-2">
        <div class="col-12">
          <button type="submit" class="btn btn-outline-custom w-100">Start planning</button>
        </div>
      </div>
    </form>
  </div>
</div>

<br>

<%- include('../partials/footer') %>